# Syndication Tool Environment Configuration
# Copy this file to .env and fill in your actual values

# Global Settings
SYNDICATION_ENVIRONMENT=development
SYNDICATION_CONCURRENCY=3
SYNDICATION_DEFAULT_RETRIES=3
SYNDICATION_LOG_LEVEL=info

# Reddit Configuration
REDDIT_ENABLED=true
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_REFRESH_TOKEN=your_reddit_refresh_token
REDDIT_SUBREDDITS=programming,webdev,opensource
REDDIT_TITLE_TEMPLATE={name} - {shortDescription}

# Dev.to Configuration
DEVTO_ENABLED=true
DEVTO_API_KEY=your_devto_api_key
DEVTO_PUBLISHED=true
DEVTO_TAGS=opensource,tools,programming
DEVTO_TITLE_TEMPLATE=ðŸš€ {name}: {shortDescription}
DEVTO_CANONICAL_URL=

# GitHub Configuration
GITHUB_ENABLED=true
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPOSITORIES=owner/repo1,owner/repo2
GITHUB_DISCUSSION_CATEGORY=General
GITHUB_TITLE_TEMPLATE={name}: {shortDescription}
GITHUB_LABELS=tool,announcement

# LinkedIn Configuration (Coming Soon)
LINKEDIN_ENABLED=false
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Twitter/X Configuration (Coming Soon)
TWITTER_ENABLED=false
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret